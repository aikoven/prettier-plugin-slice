{
  "name": "prettier-plugin-slice",
  "version": "0.0.1",
  "description": "Prettier plugin for the Slice language",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "rimraf lib && tsc -P tsconfig.build.json",
    "prepublishOnly": "npm run build && npm test"
